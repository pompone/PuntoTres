@model PuntoTres.Utils.PaginatedList<PuntoTres.Models.SolucionPreparada>

@{
    ViewData["Title"] = "Stock de soluciones preparadas";
    var fDesde = Convert.ToString(ViewData["fechaInicio"]);
    var fHasta = Convert.ToString(ViewData["fechaFin"]);
    var hayFiltro = !string.IsNullOrEmpty(fDesde) || !string.IsNullOrEmpty(fHasta);

    // Página y tamaño (para preservar en los links)
    var pagina = Convert.ToInt32(ViewData["Pagina"] ?? 1);
    var tamanio = Convert.ToInt32(ViewData["Tamanio"] ?? 10);
}

<!-- Estilos locales -->
<style>
    /* Deja "Eliminar" grisado cuando está deshabilitado (LABO) */
    .btn-outline-danger.disabled,
    .btn-outline-danger:disabled {
        color: var(--bs-secondary-color) !important;
        border-color: var(--bs-secondary-border-subtle) !important;
        background-color: transparent !important;
        opacity: 1 !important; /* que no quede lavado */
        cursor: not-allowed !important;
    }
    /* Evita que el span wrapper de tooltip se rompa en el btn-group */
    .btn-group .d-inline-block[role="button"] {
        vertical-align: middle;
    }
</style>

<!-- Encabezado: título a la izquierda, botón a la derecha -->
<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <h1 class="h3 mb-0">Stock de soluciones preparadas</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1" aria-hidden="true"></i>
        Nueva solución
    </a>
</div>

<!-- Filtro por fecha -->
<form asp-action="Index" method="get" class="row g-3 mb-3">
    <div class="col-auto">
        <label for="fechaInicio" class="form-label">Desde</label>
        <input type="date" id="fechaInicio" name="fechaInicio" value="@(fDesde ?? "")" class="form-control" />
    </div>
    <div class="col-auto">
        <label for="fechaFin" class="form-label">Hasta</label>
        <input type="date" id="fechaFin" name="fechaFin" value="@(fHasta ?? "")" class="form-control" />
    </div>
    <div class="col-auto d-flex align-items-end gap-2">
        <button type="submit" class="btn btn-primary">Filtrar</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Limpiar</a>
    </div>
</form>

@if (hayFiltro)
{
    DateTime? desde = null;
    DateTime? hasta = null;

    if (!string.IsNullOrEmpty(fDesde) && DateTime.TryParse(fDesde, out var d)) { desde = d; }
    if (!string.IsNullOrEmpty(fHasta) && DateTime.TryParse(fHasta, out var h)) { hasta = h; }

    <div class="alert alert-info py-2">
        Rango aplicado:
        <strong>Desde</strong> @(desde?.ToString("dd/MM/yyyy") ?? "—")
        <strong>Hasta</strong> @(hasta?.ToString("dd/MM/yyyy") ?? "—")
    </div>
}

@if (!(Model?.Any() ?? false))
{
    if (hayFiltro)
    {
        <div class="alert alert-warning">No se encontraron soluciones en el rango seleccionado.</div>
    }
    else
    {
        <div class="alert alert-info">No hay soluciones registradas todavía.</div>
    }
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle" style="min-width: 1200px;">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(m => m[0].Fecha)</th>
                    <th>@Html.DisplayNameFor(m => m[0].Nombre)</th>
                    <th>@Html.DisplayNameFor(m => m[0].CantidadBase) (g/ml)</th>
                    <th>@Html.DisplayNameFor(m => m[0].VolumenFinal) (ml)</th>
                    <th>@Html.DisplayNameFor(m => m[0].CodigoInterno)</th>
                    <th>@Html.DisplayNameFor(m => m[0].Lote)</th>
                    <th>@Html.DisplayNameFor(m => m[0].Marca)</th>
                    <th>@Html.DisplayNameFor(m => m[0].ConcentracionObtenida)</th>
                    <th>@Html.DisplayNameFor(m => m[0].IdReactivo)</th>
                    <th>@Html.DisplayNameFor(m => m[0].FechaVencimiento)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                        <td>@item.Nombre</td>
                        <td>@item.CantidadBase?.ToString("0.####")</td>
                        <td>@item.VolumenFinal.ToString("0.####")</td>
                        <td>@item.CodigoInterno</td>
                        <td>@(string.IsNullOrWhiteSpace(item.Lote) ? "-" : item.Lote)</td>
                        <td>@item.Marca</td>
                        <td>@item.ConcentracionObtenida</td>
                        <td>@item.IdReactivo</td>
                        <td>
                            @if (item.FechaVencimiento.HasValue)
                            {
                                var vencida = item.FechaVencimiento.Value.Date < DateTime.Today;
                                <span>@item.FechaVencimiento.Value.ToString("dd/MM/yyyy")</span>
                                <span class="badge rounded-pill ms-1 @(vencida
                                                                          ? "bg-danger-subtle text-danger border border-danger"
                                                                          : "bg-success-subtle text-success border border-success")">
                        @(vencida ? "Vencida" : "Vigente")
                    </span>
                                        }
                            else
                            {
                                <span class="badge rounded-pill bg-secondary-subtle text-secondary border border-secondary">Sin fecha</span>
                            }
                        </td>

                        <td class="text-center">
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Details"
                                   asp-route-id="@item.Id"
                                   asp-route-fechaInicio="@(fDesde)"
                                   asp-route-fechaFin="@(fHasta)"
                                   asp-route-pagina="@(pagina)"
                                   asp-route-tamanio="@(tamanio)"
                                   class="btn btn-sm btn-outline-secondary fw-normal">Ver</a>

                                <a asp-action="Edit"
                                   asp-route-id="@item.Id"
                                   asp-route-fechaInicio="@(fDesde)"
                                   asp-route-fechaFin="@(fHasta)"
                                   asp-route-pagina="@(pagina)"
                                   asp-route-tamanio="@(tamanio)"
                                   class="btn btn-sm btn-outline-warning fw-normal">Editar</a>

                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Delete"
                                       asp-route-id="@item.Id"
                                       asp-route-fechaInicio="@(fDesde)"
                                       asp-route-fechaFin="@(fHasta)"
                                       asp-route-pagina="@(pagina)"
                                       asp-route-tamanio="@(tamanio)"
                                       class="btn btn-sm btn-outline-danger fw-normal">Eliminar</a>
                                }
                                else
                                {
                                    <!-- Wrapper para permitir tooltip en elemento deshabilitado -->
                                    <span class="d-inline-block" tabindex="0"
                                          data-bs-toggle="tooltip" data-bs-placement="top"
                                          title="Solo ADMIN puede eliminar">
                                        <a class="btn btn-sm btn-outline-danger disabled fw-normal"
                                           role="button" aria-disabled="true" tabindex="-1">Eliminar</a>
                                    </span>
                                }
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pie de paginación -->
    <div class="d-flex justify-content-between align-items-center border-top pt-3 mt-3 flex-wrap gap-2">
        <div class="text-muted">Página <strong>@Model.PageIndex</strong> de <strong>@Model.TotalPages</strong></div>

        <nav aria-label="Paginación">
            <ul class="pagination mb-0">
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pagina="1"
                       asp-route-tamanio="@(tamanio)"
                       asp-route-fechaInicio="@(fDesde)"
                       asp-route-fechaFin="@(fHasta)">« Primero</a>
                </li>
                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pagina="@(Model.PageIndex - 1)"
                       asp-route-tamanio="@(tamanio)"
                       asp-route-fechaInicio="@(fDesde)"
                       asp-route-fechaFin="@(fHasta)">‹ Anterior</a>
                </li>
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pagina="@(Model.PageIndex + 1)"
                       asp-route-tamanio="@(tamanio)"
                       asp-route-fechaInicio="@(fDesde)"
                       asp-route-fechaFin="@(fHasta)">Siguiente ›</a>
                </li>
                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pagina="@Model.TotalPages"
                       asp-route-tamanio="@(tamanio)"
                       asp-route-fechaInicio="@(fDesde)"
                       asp-route-fechaFin="@(fHasta)">Último »</a>
                </li>
            </ul>
        </nav>
    </div>
}

@section Scripts {
    <script>
        // Inicializa tooltips (incluye el wrapper del botón "Eliminar" deshabilitado)
        document.addEventListener('DOMContentLoaded', function () {
            var tts = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tts.forEach(function (el) { new bootstrap.Tooltip(el); });
        });
    </script>
}














