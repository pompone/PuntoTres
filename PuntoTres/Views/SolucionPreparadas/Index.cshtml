@model IEnumerable<PuntoTres.Models.SolucionPreparada>

@{
    ViewData["Title"] = "Stock de soluciones preparadas";
    var fDesde = Convert.ToString(ViewData["fechaInicio"]);
    var fHasta = Convert.ToString(ViewData["fechaFin"]);
    var hayFiltro = !string.IsNullOrEmpty(fDesde) || !string.IsNullOrEmpty(fHasta);
}

<h1 class="h3 mb-3">Stock de soluciones preparadas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Nueva soluciÃ³n</a>
</p>

<!-- Filtro por fecha -->
<form asp-action="Index" method="get" class="row g-3 mb-3 align-items-end">
    <div class="col-auto">
        <label for="fechaInicio" class="form-label">Desde</label>
        <input type="date" id="fechaInicio" name="fechaInicio" value="@(fDesde ?? "")" class="form-control" />
    </div>
    <div class="col-auto">
        <label for="fechaFin" class="form-label">Hasta</label>
        <input type="date" id="fechaFin" name="fechaFin" value="@(fHasta ?? "")" class="form-control" />
    </div>
    <div class="col-auto d-flex gap-2">
        <button type="submit" class="btn btn-primary">Filtrar</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Limpiar</a>
    </div>
    <div class="col-auto">
        <!-- ðŸ“„ BotÃ³n PDF -->
        <form asp-action="DescargarPDF" method="get" class="d-inline">
            <input type="hidden" name="fechaInicio" value="@fDesde" />
            <input type="hidden" name="fechaFin" value="@fHasta" />
            <button type="submit" class="btn btn-outline-danger">
                <i class="bi bi-file-earmark-pdf"></i> Descargar PDF
            </button>
        </form>
    </div>
</form>

<!--  Mostrar rango aplicado -->
@if (hayFiltro)
{
    DateTime? desde = null;
    DateTime? hasta = null;

    if (!string.IsNullOrEmpty(fDesde) && DateTime.TryParse(fDesde, out var d)) { desde = d; }
    if (!string.IsNullOrEmpty(fHasta) && DateTime.TryParse(fHasta, out var h)) { hasta = h; }

    <div class="alert alert-info py-2">
        <strong>Rango aplicado:</strong>
        Desde @(desde?.ToString("dd/MM/yyyy") ?? "â€”")
        hasta @(hasta?.ToString("dd/MM/yyyy") ?? "â€”")
    </div>
}

<!--  Tabla -->
@if (!(Model?.Any() ?? false))
{
    if (hayFiltro)
    {
        <div class="alert alert-warning">No se encontraron soluciones en el rango seleccionado.</div>
    }
    else
    {
        <div class="alert alert-info">No hay soluciones registradas todavÃ­a.</div>
    }
}
else
{
    @* PaginaciÃ³n arriba (opcional) *@
    @if (ViewBag.TotalPages > 1)
    {
        <p class="text-muted small">
            PÃ¡gina @ViewBag.Page de @ViewBag.TotalPages
        </p>
    }

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle" style="min-width: 1200px;">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Fecha)</th>
                    <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                    <th>@Html.DisplayNameFor(m => m.CantidadBase) (g/ml)</th>
                    <th>@Html.DisplayNameFor(m => m.VolumenFinal) (ml)</th>
                    <th>@Html.DisplayNameFor(m => m.CodigoInterno)</th>
                    <th>@Html.DisplayNameFor(m => m.Lote)</th>
                    <th>@Html.DisplayNameFor(m => m.Marca)</th>
                    <th>@Html.DisplayNameFor(m => m.ConcentracionObtenida)</th>
                    <th>@Html.DisplayNameFor(m => m.IdReactivo)</th>
                    <th>@Html.DisplayNameFor(m => m.FechaVencimiento)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                        <td>@item.Nombre</td>
                        <td>@item.CantidadBase?.ToString("0.####")</td>
                        <td>@item.VolumenFinal.ToString("0.####")</td>
                        <td>@item.CodigoInterno</td>
                        <td>@item.Lote</td>
                        <td>@item.Marca</td>
                        <td>@item.ConcentracionObtenida</td>
                        <td>@item.IdReactivo</td>
                        <td>
                            @if (item.FechaVencimiento.HasValue)
                            {
                                var vencida = item.FechaVencimiento.Value.Date < DateTime.Today;
                                <span>@item.FechaVencimiento.Value.ToString("dd/MM/yyyy")</span>
                                <span class="badge rounded-pill ms-1 @(vencida
                                    ? "bg-danger-subtle text-danger border border-danger"
                                    : "bg-success-subtle text-success border border-success")">
                                    @(vencida ? "Vencida" : "Vigente")
                                </span>
                            }
                            else
                            {
                                <span class="badge rounded-pill bg-secondary-subtle text-secondary border border-secondary">
                                    Sin fecha
                                </span>
                            }
                        </td>

                        <td class="text-center">
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Details"
                                   asp-route-id="@item.Id"
                                   asp-route-fechaInicio="@fDesde"
                                   asp-route-fechaFin="@fHasta"
                                   class="btn btn-outline-secondary">Ver</a>

                                <a asp-action="Edit"
                                   asp-route-id="@item.Id"
                                   asp-route-fechaInicio="@fDesde"
                                   asp-route-fechaFin="@fHasta"
                                   class="btn btn-outline-warning">Editar</a>

                                <a asp-action="Delete"
                                   asp-route-id="@item.Id"
                                   asp-route-fechaInicio="@fDesde"
                                   asp-route-fechaFin="@fHasta"
                                   class="btn btn-outline-danger">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!--  PaginaciÃ³n -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav aria-label="PaginaciÃ³n">
            <ul class="pagination justify-content-center mt-3">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(ViewBag.Page == i ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-fechaInicio="@fDesde"
                           asp-route-fechaFin="@fHasta">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
}







