@model PuntoTres.Models.SolucionPreparada

@{
    ViewData["Title"] = "Eliminar solución";
}

<h1 class="h3 mb-3 text-danger">¿Eliminar esta solución?</h1>

<div class="card p-3 shadow-sm">
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Fecha)</dt>
        <dd class="col-sm-9">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Nombre)</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CantidadBase)</dt>
        <dd class="col-sm-9">@Model.CantidadBase?.ToString("0.##")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.VolumenFinal)</dt>
        <dd class="col-sm-9">@Model.VolumenFinal.ToString("0.##")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CodigoInterno)</dt>
        <dd class="col-sm-9">@Model.CodigoInterno</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Lote)</dt>
        <dd class="col-sm-9">@Model.Lote</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Marca)</dt>
        <dd class="col-sm-9">@Model.Marca</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.ConcentracionObtenida)</dt>
        <dd class="col-sm-9">@Model.ConcentracionObtenida</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.IdReactivo)</dt>
        <dd class="col-sm-9">@Model.IdReactivo</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.FechaVencimiento)</dt>
        <dd class="col-sm-9">
            @if (Model.FechaVencimiento.HasValue)
            {
                var vencida = Model.FechaVencimiento.Value.Date < DateTime.Today;
                <span>@Model.FechaVencimiento.Value.ToString("dd/MM/yyyy")</span>
                <span class="badge @(vencida ? "text-bg-danger" : "text-bg-success") ms-1">
                    @(vencida ? "Vencida" : "Vigente")
                </span>
            }
            else
            {
                <span class="badge text-bg-secondary">Sin fecha</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <div class="mt-3">
            <button type="submit" class="btn btn-danger me-2">Eliminar</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        </div>
    </form>
</div>


