@model PuntoTres.Models.SolucionPreparada

@{
    ViewData["Title"] = "Nueva solución preparada";
}

<h1 class="h3 mb-3">Nueva solución preparada</h1>

<form asp-action="Create" method="post" class="row g-3">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-4">
        <label asp-for="Fecha" class="form-label"></label>
        <input asp-for="Fecha" class="form-control" type="date" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="col-md-8">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="VolumenFinal" class="form-label"></label>
        <input asp-for="VolumenFinal" class="form-control" step="any" />
        <span asp-validation-for="VolumenFinal" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="CantidadBase" class="form-label"></label>
        <input asp-for="CantidadBase" class="form-control" step="any" />
        <span asp-validation-for="CantidadBase" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="CodigoInterno" class="form-label"></label>
        <input asp-for="CodigoInterno" class="form-control" />
        <span asp-validation-for="CodigoInterno" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Marca" class="form-label"></label>
        <input asp-for="Marca" class="form-control" />
        <span asp-validation-for="Marca" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Lote" class="form-label"></label>
        <input asp-for="Lote" class="form-control" />
        <span asp-validation-for="Lote" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="ConcentracionObtenida" class="form-label"></label>
        <input asp-for="ConcentracionObtenida" class="form-control" />
        <span asp-validation-for="ConcentracionObtenida" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="IdReactivo" class="form-label"></label>
        <input asp-for="IdReactivo" class="form-control" />
        <span asp-validation-for="IdReactivo" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="FechaVencimiento" class="form-label"></label>
        <input asp-for="FechaVencimiento" class="form-control" type="date" />
        <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
    </div>

    <div class="col-12 d-flex gap-2 mt-2">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



